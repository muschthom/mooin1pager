{{!
    @template format_mooin1pager/local/content/frontpage/courseprogress

    Displays the frontpage courseprogress.

    Example context (json):
    {
        "continue_url": URL,
        "continue_text": "Start Learning"
    }
}}

<div class="coursefrontpage__course-progress">
    <h2>{{#str}} progress, format_mooin1pager {{/str}}</h2>
    <div class="d-flex course-progress-inner">
        <div class="progress-container">
            <div class="progressbar">
                <div class="progressbar-inner" style="width: {{courseprogress}}%"></div>
            </div>
            <span class="font-weight-bold">{{{courseprogress}}}%</span>
            <span class="d-none d-sm-inline-block"> {{#str}} course_progress_text, format_mooin1pager {{/str}}</span>
            <span class="d-inline-block d-sm-none"> {{#str}} progress_text_short, format_mooin1pager {{/str}}</span>
        </div>
    </div>
</div>